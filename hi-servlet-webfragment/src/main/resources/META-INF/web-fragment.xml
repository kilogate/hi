<web-fragment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd" version="3.0">

    <servlet>
        <servlet-name>myFragmentServlet</servlet-name>
        <servlet-class>com.kilogate.hi.servlet.webfragment.MyFragmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myFragmentServlet</servlet-name>
        <url-pattern>/myFragmentServlet</url-pattern>
    </servlet-mapping>

</web-fragment>